<tr id="task-<%= task.id %>">
  <th class="status">
    <%= check_box_tag "Status", [current_user.id, task.project_id, task.id], task.status, :class => "task-check" %>
  </th>
  <th class="task-name">
    <%= "#{task.name}" %>
  </th>
    <th class="task-deadline">
      <% if task.deadline.present? %>
          <%= "#{task.deadline.strftime("%d.%m.%Y %H:%M")}" %>
      <% end %>
    </th>
  <th class="task-actions">
    <i class="fas fa-arrows-alt-v drag handle"></i>
    <%= link_to edit_user_project_task_path(id: task.id, user_id: current_user.id, project_id: task.project_id), remote: true  do %>
      <i class="fas fa-pen"></i>
    <% end %>
    <%= link_to user_project_task_path(id: task.id, user_id: current_user.id, project_id: task.project_id), method: :delete, data: { confirm: "Are you sure?", remote: true }, class: "delete" do %>
      <i class="fas fa-trash-alt"></i>
    <% end %>
  </th>
</tr>
