<%= simple_form_for [current_user, project, @task], action: :new, remote: true do |f| %>
  <%= f.input :name, label: "<i class='fas fa-plus'></i>".html_safe, input_html: { placeholder: "Task name" } %>
  <%= f.input :deadline, as: :string, label: false, input_html: { placeholder: "Deadline", autocomplete: "off" } %>
  <%= f.submit "Add task", class: "action-button" %>
<% end %>
